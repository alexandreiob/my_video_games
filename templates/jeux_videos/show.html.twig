{% extends 'base.html.twig' %}

{% block title %}JeuxVideos{% endblock %}

{% block body %}



<div class="container pt-5">

    <div class="row mb-2">

        <div class="col">

         <!-- Ajoutez cette partie pour l'icône de lien vers la page d'accueil -->
       
            <a href="{{ path('app_home') }}" class="navbar-brand">
                <i class="fas fa-gamepad fa-2x" title="Retour sur la home"></i>
            </a>

            <h1>Jeux Vidéo</h1>

            <div class="container"> <!-- Ajout de la classe container -->

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ jeux_video.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ jeux_video.name }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ jeux_video.type }}</td>
                        </tr>
                        <tr>
                            <th>Released</th>
                            <td>{{ jeux_video.released ? jeux_video.released|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>
                                {% if jeux_video.picture %}
                                    <img src="{{ jeux_video.picture }}" alt="{{ jeux_video.name }}" width="200">
                                {% else %}
                                    Aucune image disponible
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="col text-right">
                    <div class="btn-group">
                        <a href="{{ path('app_jeux_videos_index') }}" class="btn btn-secondary mr-2">Back to list</a>
                        <a href="{{ path('app_jeux_videos_edit', {'id': jeux_video.id}) }}" class="btn btn-primary mr-2">Edit</a>
                        {{ include('jeux_videos/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

{% endblock %}
