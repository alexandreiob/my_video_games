{% extends 'base.html.twig' %}

{% block title %}Console{% endblock %}

{% block body %}



<div class="container pt-5">

    <div class="row mb-2">

        <div class="col">

         <!-- Ajoutez cette partie pour l'icÃ´ne de lien vers la page d'accueil -->
       
            <a href="{{ path('app_home') }}" class="navbar-brand">
                <i class="fas fa-gamepad fa-2x" title="Retour sur la home"></i>
            </a>

            <h1>Console</h1>

            <div class="container"> <!-- Ajout de la classe container -->
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ console.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ console.name }}</td>
                        </tr>
                        <tr>
                            <th>Brand</th>
                            <td>{{ console.brand }}</td>
                        </tr>
                        <tr>
                            <th>Released</th>
                            <td>{{ console.released ? console.released|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="col text-right">
                    <div class="btn-group">
                        <a href="{{ path('app_console_index') }}" class="btn btn-secondary mr-2">Back to list</a>
                        <a href="{{ path('app_console_edit', {'id': console.id}) }}" class="btn btn-primary mr-2">Edit</a>
                        {{ include('console/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
{% endblock %}
